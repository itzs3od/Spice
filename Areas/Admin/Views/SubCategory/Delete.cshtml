@model Spice.Models.SubCategory

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Delete Sub Category</h2>
<br />
<div class=" border  backgroundWhite">
    <form method="post">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Category.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Category.Name" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </form>

</div>